<h1>cafe</h1>
<h3>新規投稿ページ</h3>
<%= form_with(model: @dog, url: dogs_path, local: true) do |f| %>


  <div class="field">
    <%= f.label :店名 %>
    <%= f.text_field :cafe_name, :size => 30 %>
  </div>

  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :adress, :size => 30 %>
  </div>

   
  <div class="field">
    <%= f.label :価格 %>
    <%= f.text_field :price, :size => 30 %>
  </div>

 
  <div class="field">
    <%= f.label :商品名 %>
    <%= f.text_field :recommend, :size => 30 %>
  </div>

  <div class="field">
  <%= f.label :image %>
  <%= f.file_field :image %>
</div> 
<%= f.label :body,"投稿" %>
   
    
  <br>
  <p>スペースを入力することで複数のタグを付けることができます。</p>
  <%= f.text_field :tag_name, placeholder: "Ruby Python Java" %>
<%= f.label :youtube_url %>
    <%= f.text_field :youtube_url, :size => 140 %>



  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", dogs_path %>